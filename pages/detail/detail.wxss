/* pages/detail/detail.wxss */
.slider,.slider image,.slider swiper{
  width: 100%;
  height: 280px;
}
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 16px;
}
.navbar .item.active{
  color: #E31939;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #E31939;
}
.detail-title{
  font-size: 16px;
  color: #333;
}
.detail-title image{
  width: 16px;
  height: 16px;
}
.new{
  font-size: 18px;
  font-weight: bold;
  color: #E31939;
}
.old{
  font-size: 16px;
  color: #333;
  text-decoration: line-through;
}
.box{
  padding: 10rpx 20rpx;
}
.score{
  background: #E31939;
  color: #fff;
  font-size: 12px;
  padding: 5rpx 10rpx;
  margin-left: 30rpx;
}
.footer{
  position: fixed;
  width: 100%;
  height: 50px;
  bottom: 0;
  /* border: 1rpx solid #ddd; */
}
.footer image{
  width: 32px;
  height: 32px;
  /* border: 1px solid red; */
}
.index{
  display: flex;
  flex-direction: column;
  align-items: center; 
  justify-content: center;
  width: 50px;
  height: 50px;
  padding: 10rpx;
  box-sizing: border-box;
  /* border: 1px solid blue; */
  border-top: 1rpx solid #ddd;
  border-right: 1rpx solid #ddd;
}
.btn{
  width: 112px;
  height: 50px;
  color: #fff;
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}
.buy{
  background: #FF9C00;
}
.fav{
  background: #E31939; 
}