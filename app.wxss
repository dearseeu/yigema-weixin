/**app.wxss**/



/* 灰色分隔块 */
.divider{
  height: 20rpx;
  background:#f1f1f1;
  box-shadow: 0 5rpx 5rpx rbga(0,0,0,.1)
}
/* 右侧箭头 */
.arrow{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.arrow::after{
  content: "";
  width: 15rpx;
  height: 15rpx;
  border-top: 3rpx solid #ccc;
  border-right: 3rpx solid #ccc;
  transform: rotate(45deg);
}
/* 不允许超过 */
.ell{
  overflow: hidden;
  white-space: nowrap;/*不允许换行*/
  text-overflow: ellipsis;/*超出部分补充...*/
}
.cell{
  background: #fff;
  font-size: 16px;
}
.cell-item{
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 30rpx;
}
/* 小字体 */
.littleFont{
  font-size: 12px;
  color: #999;
}
/* 价格 */
.new-price{
  color: #E31939;
  font-size: 14px;
}
.old-price{
  color: #666;
  font-size: 12px;
  text-decoration: line-through;
}
/* 弹性布局 */
.d-flex{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
/* 右侧细线 */
.bdr{
  position: relative;
}
.bdr::after{
  content: "";
  width: 1rpx;
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
  background-color: #ccc;
}
/* 商品列表样式 */
.introduce{
  background: #F1F1F1;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
}
.intro-item{
  box-sizing: border-box;
  width: 47%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  padding:10rpx;
  background: #fff;
  margin: 10rpx;
}
.intro-item image{
  width: 150px;
  height: 150px;
}
.intro-btn{
  position: absolute;
  bottom: 9px;
  right: 21px;
  width: 30px;
  height: 30px;
  text-align: center;
  line-height: 40px;
  border-radius: 50%;
  background: #E31939;
}
.intro-btn image{
  width: 25px;
  height: 25px;
}